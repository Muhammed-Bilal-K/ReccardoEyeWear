<!-- MAIN -->
<main>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet" />
    <title>user.username Account Details</title>
    <section style="background-color: #eee; height: 100vh;">
        <div class="container py-5">
            <div class="row">
                <div class="col">
                    <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">Add a Products</li>

                        </ol>
                    </nav>
                </div>
            </div>
            <form action="admin/addProducts" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card mb-4">
                            <div class="card-body text-center">
                                <h5 class="my-3">Image Files</h5>
                                <p class="text-muted mb-1">Upload</p>
                                <br>
                                <div class="d-flex justify-content-center mb-2">
                                    <input type="file" name="image" multiple required>
                                </div>
                            </div>
                        </div>
                        <div class="card mb-4 mb-lg-0">

                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="card mb-4" style="height: 500px;">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Product Name</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0"><input type="text" name="pname" placeholder="Enter the P-name"></p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Qunatity</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0"><input type="text" name="pquantity"></p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Description</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0"><textarea name="pdescription" id="" cols="30"
                                                rows="5"></textarea>
                                        </p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Category</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">
                                        <div class="custom-select" style="width:200px;">
                                            <select id="inputState" class="form-control" name="pcategory">
                                                <% CategoryList.forEach(categ => { %>
                                                    <option><%= categ.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                        </p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Price</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0"><input type="number" name="pprice" placeholder="Enter the price"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button>submit</button>
                </div>
            </form>
        </div>
    </section>

</main>