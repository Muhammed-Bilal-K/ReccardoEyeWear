<!-- MAIN -->
<main>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet" />
    <title>user.username Account Details</title>
    <section style="background-color: #eee; height: 100vh;">
        <div class="container py-5">
            <div class="row">
                <div class="col">
                    <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">Add a Products</li>

                        </ol>
                    </nav>
                </div>
            </div>
            <div>
                <% if (CoupenExist) { %>
                    <h6>Coupon code already exists.</h6>
                <% } %>
            </div>
            <form action="admin/editCoupen" method="post" enctype="multipart/form-data">
                <div class="row">
                    <!-- <div class="col-lg-4">
                        <div class="card mb-4">
                            <div class="card-body text-center">
                                <h5 class="my-3">Image Files</h5>
                                <p class="text-muted mb-1">Upload</p>
                                <br>
                                <div class="d-flex justify-content-center mb-2">
                                    <input type="file" name="image" multiple required>
                                </div>
                            </div>
                        </div>
                        <div class="card mb-4 mb-lg-0">

                        </div>
                    </div> -->
                    <div class="col-lg-8">
                        <div class="card mb-4" style="height: 500px;">
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="mb-2 ml-3 cl2"><span>Coupon Name</span></div>
                                    <input type="text" hidden name="id" value="<%= coupenData._id %>">
                                    <input type="text" class="form-control form-control-user"
                                        id="exampleFirstName" placeholder="Coupon Name"
                                        name="couponName" value="<%= coupenData.couponname %>">
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-2 mb-sm-0">
                                        <div class="mb-2 ml-3 cl2"><span>Coupon Code</span></div>
                                        <input type="text" class="form-control form-control-user"
                                            id="exampleLastName" placeholder="Coupon Code" style="text-transform: uppercase;"
                                            name="couponCode" value="<%= coupenData.couponcode %>">
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="mb-2 ml-3 cl2"><span>Discount (%)</span></div>
                                        <input type="number" class="form-control form-control-user"
                                            id="exampleFirstName" placeholder="Discount"
                                            name="discount" value="<%= coupenData.discountamount %>">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <!-- <div class="col-sm-6 mb-2 mb-sm-0">
                                        <div class="mb-2 ml-3 cl2"><span>Use count</span></div>
                                        <input type="text" class="form-control form-control-user"
                                            id="exampleFirstName" placeholder="Maximum use count"
                                            name="maxUseCount">
                                    </div> -->
                                    <div class="col-sm-6">
                                        <div class="mb-2 ml-3 cl2"><span>Starting Price</span></div>
                                        <input type="number" class="form-control form-control-user"
                                            id="exampleLastName" placeholder="Orders Above"
                                            name="ordersAbove" value="<%= coupenData.mincartamount %>">
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <!-- <div class="col-sm-6 mb-2 mb-sm-0">
                                        <div class="mb-2 ml-3 cl2"><span>Maximum Discount</span></div>
                                        <input type="number" class="form-control form-control-user"
                                            id="exampleFirstName"
                                            placeholder="Maximum Discountable Amount"
                                            name="maximumDiscountableAmount">
                                    </div> -->
                                    <div class="col-sm-6">
                                        <div class="mb-2 ml-3 cl2"><span>Expiry Date</span></div>
                                        <input type="date" class="form-control form-control-user"
                                            id="exampleLastName" placeholder="Expiry Date"
                                            name="expiryDate" value="<%= coupenData.expired %>">
                                    </div>
                                </div>
                                <button style="padding: 7px 34px;
                                border-radius: 18px;
                                border: 1px seashell;
                                outline: none;
                                margin-top: 2rem;
                                background-color: #cfcfca;
                                text-transform: uppercase;">submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>

</main>