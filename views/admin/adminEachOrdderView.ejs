                    </div>
                    <div class="col-lg-8">
                        <% FULLDATA.forEach(product=> { %>
                            <div class="card mb-4" style="height: 500px;">
                                <div class="card-body">
                                    <% product.products.forEach(product_data=> { %>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Product Name : <%= product_data.product_id.name %>
                                                </p>
                                                <p class="mb-0" style="display: inline;">Product Price: <%=
                                                        product_data.product_id.price %>
                                                        X </p>
                                                <p style="display: inline;">
                                                    <%= product_data.qty %>
                                                </p>
                                                <p>Total Price : <%= product_data.price %>
                                                </p>
                                            </div>
                                            <div class="col-sm-5">
                                                <img style="    width: 100px;"
                                                    src="/uploaded/<%= product_data.product_id.image[0] %>" alt=""
                                                    srcset="">
                                            </div>
                                            <div class="col-sm-4">
                                                <p>Product Status: 
                                                    <% if (product_data.status == 'pending') { %>
                                                        <a
                                                            href="/admin/order/Status?proid=<%= product_data._id %>&orderid=<%= product._id %>&userid=<%= Userid %>">
                                                            <%= product_data.status %>
                                                        </a>
                                                        <% } else { %>
                                                            Delivered
                                                        <% } %>
                                                </p>
                                                <% if (product_data.returned === true) { %>
                                                    <p>Product Returned</p>
                                                <% } %>
                                            </div>
                                        </div>
                                        <hr>
                                        <% }) %>
