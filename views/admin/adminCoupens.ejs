<%- include('../partials/adminPartials/__adminHeader__') %>
<!-- MAIN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<main>
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold cl1">Cuopens List</h6>
            <div>
                <a href="/admin/addCoupons" role="button" style="text-decoration: none">
                    <i class="fa fa-plus-circle cl1"></i><span class="pl-2">Add New
                        Coupon</span>
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Coupon Name</th>
                            <th>Coupon Code</th>
                            <th>Discount (%)</th>
                            <th>Use count</th>
                            <th>Orders above</th>
                            <!-- <th>Maximum Discount</th> -->
                            <th>Expiry Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% coupenDetails.forEach(Coupon => { %>
                         
                            <tr>
                                <td>
                                    <p><%= Coupon.couponname %></p>
                                </td>
                                <td style="text-transform: uppercase">
                                    <p><%= Coupon.couponcode %></p>
                                </td>
                                <td>
                                    <p><%= Coupon.discountamount %></p>
                                </td>
                                <td>
                                    <p><%= Coupon.maxUseCount %></p>
                                </td>
                                <td>
                                    <p><%= Coupon.mincartamount %></p>
                                </td>
                                <!-- <td>
                                    <p>dsdsd</p>
                                </td> -->
                                <td width="20%">
                                    <p><%= Coupon.expired %></p>
                                </td>
                                <td width="15%">
                                    <a href="../admin/editCoupon?id=">Edit</a>
                                    <a href="../admin/deleteCoupon?id=" class="pl-2">Delete</a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <%- include('../partials/adminPartials/__adminFooter__') %>