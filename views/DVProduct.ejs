	<!-- CONTENT -->
	<section id="content" style="margin: 3rem 9rem;">
			<div class="card mb-4" style="width: 60rem;">
				<div class="card-body">
					<h1>ORDER DETAILS</h1>
					<h6>Order ID - <%= Fulldata._id %></h6>
					<HR></HR>
                    <div class="row">
                            <div class="col-md-4">
								<h4 style="font-weight: 800;">Products</h4>
                                <% Fulldata.products.forEach(items => { %>
                                    <h4><%= items.product_id.name %></h4>
									<p><img style="width: 65px;" src="/uploaded/<%= items.product_id.image[0] %>" alt="" srcset=""></p>
                                    <p style="display: inline;" >Qunatity:<%= items.qty %></p>
									<p style="display: inline;" >X $<%= items.product_id.price %></p>
                                    <p>Total : $<%= items.price %></p>
                                    <p>Status : <%= items.status %></p>
									<% if (items.status == 'pending') { %>
										<p><a href="/order/delete?proId=<%= items._id %>&Ordid=<%= Fulldata._id %>" class="card-link">Cancel</a></p>
									<% } else { %>
										<% if (!items.returned) { %>
											<p><a href="/order/return?Ordid=<%= Fulldata._id %>&proid=<%= items._id %>&coupid=<%= Fulldata.coupen_Id %>" class="card-link">Return</a></p>
										<% } else { %>
											<p>Returned</p>
										<% } %>
									<% } %>

									<p>3 Days Delivery Time</p>
                                    <hr>
                                <% }) %>
                            </div>
                        <div class="col-md-4">
							<h4 style="font-weight: 800;">Address Information</h4>
                            <h4><%= Fulldata.address.name %></h4>
                            <p style="display: inline;"><%= Fulldata.email %></p>
                            <p style="display: inline;"><%= Fulldata.address.country %></p>
                            <p style="display: inline;"><%= Fulldata.address.address %></p>
                            <p style="display: inline;"><%= Fulldata.address.city %></p>
                            <p style="display: inline;"><%= Fulldata.address.state %></p>
                            <p style="display: inline;"><%= Fulldata.address.zipcode %></p>
                            <hr>
							<h4 style="font-weight: 800;">Bill Details</h4>
                            <h5>Total : $<%= Fulldata.totalamount %></h5>
                            <h5>Payment :<%= Fulldata.paymentmethod %></h5>
							<h5 style="display: inline;">Shipping Charge</h5><p style="display: inline;">: Free Shipping</p>
                            <hr>
                        </div>
                        <div class="col-md-4">
                            <!-- <p><a href="/settings/useradd/update/" class="card-link"></a></p> -->
								
							<p><a href="/order/<%= Fulldata._id %>" class="card-link">Invoice</a></p>
                        </div>
                    </div>
				</div>
			</div>
	</section>
